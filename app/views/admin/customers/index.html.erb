<h1>会員一覧</h1>
<table class='table'>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th colspan="4">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to admin_customer_path(customer) do %>
          <%= customer.family_name %><%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
          <% if customer.is_active == true %>
            <td class="text-success">有効</td>
          <% else %>
            <td class="text-secondary">退会</td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
