<div class="countainer">
  <h3>ジャンル一覧・追加</h3>
  <%= form_with model: @genre, url:admin_genre_path(@genre) do |f| %>
    <div class="form-inline">
      <%= f.label :name, 'ジャンル名' %>
      <%= f.text_field :name, placeholder: "ジャンル名", class: 'form-control' %>
      <%= f.submit '変更を保存',class: 'btn btn-success' %>
      <%= link_to '削除する', admin_genre_path(@genre.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn btn-danger"%>
    </div>
  <% end %>
</div>