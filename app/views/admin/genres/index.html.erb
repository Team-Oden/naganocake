<div class="countainer">
  <h1>ジャンル一覧・追加</h1>
  <%= form_with model: @genre ,url:admin_genres_path do |f| %>
    <div class="form-inline">
      <%= f.label :name, 'ジャンル名' %>
      <%= f.text_field :name, placeholder: "ジャンル名", class: 'form-control' %>
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
  <% end %>
  <table>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>