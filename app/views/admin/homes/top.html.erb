
<h4>注文履歴一覽</h4>
<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d/%X') %></td>
      <td><%= order.customer.full_name %></td>
      <td>
        <% total_amount = 0 %>
        <% order.order_details.each do |order_detail| %>
          <% total_amount += order_detail.amount %>
        <% end %>
        <%= total_amount %>
      </td>
      <td><%= order.status_i18n %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= paginate @oeders %>
