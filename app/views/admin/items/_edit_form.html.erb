<%= form_with model: item, url:admin_item_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :image, "商品画像", class: 'col-sm-3' %>
    <%= f.file_field :image, class: 'col-sm-9 form-control-file item_image', accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.label :name, "商品名", class: 'col-sm-3' %>
    <%= f.text_field :name, class: 'col-sm-9 form-control item_name' %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, "商品説明", class: 'col-sm-3' %>
    <%= f.text_area :introduction, class: 'col-sm-9 form-control item_introduction' %>
  </div>
  <div class="form-group">
    <%= f.label :genre_id, "ジャンル", class: 'col-sm-3' %>
    <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: '選択してください', class: 'col-sm-9 form-control item_genre' , required: true %>
  </div>
  <div class="form-group">
    <%= f.label :price, "税抜価格", class: 'col-sm-3' %>
    <%= f.number_field :price, class: 'col-sm-9 form-control tax_out_price' %>円
  </div>
  <div class="form-group">
    <%= f.label :is_active, "販売ステータス" %>
    <%= f.radio_button :is_active, :true, checked: true %>
    <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
  </div>
  <div class="form-group">
    <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>
<% end %>

<!--※レイアウトしてくれる方form_withのパスとsubmitの文字を変えてください-->