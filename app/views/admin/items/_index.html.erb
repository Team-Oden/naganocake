<table class="table">
  <thead style="background-color: #f5f5f5">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th colspan="4">ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody class="table table-borderless">
    <% items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><u><%= link_to item.name, admin_item_path(item.id), class: 'text-dark' %></u></td>
        <td><%= item.price %></td>
        <td colspan="4"><%= item.genre.name %></td>
        <% if item.is_active == true %>
          <td class="text-success">販売中</td>
        <% else %>
          <td class="text-secondary">販売停止中</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate items %>