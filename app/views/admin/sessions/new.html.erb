<div class='container px-5 px-sm-0'>
  <div class='col-md-12'>
    <h4 class="ml-5 mt-3", style="background-color: #eee; width:200px; padding-left: 12px; margin-bottom: 40px;"><b>管理者ログイン</b></b></h4>
    <div class="d-flex align-items-center justify-content-center">

      <table class=padding-left: 12px;>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

         <tr>
            <td style="width:160px; ">メールアドレス</td>
            <td>
              <%= f.text_field :email,  size: 50, autofocus: true, autocomplete: "email", style:"margin-right:10px; margin-bottom: 20px;" %>
            </td>
          </tr>
          <tr>
            <td style="width:160px; ">パスワード</td>
            <td><%= f.text_field :password,  size: 50, autocomplete: "current-password", style:"margin-right:10px; margin-bottom: 20px;" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <div class="actions">
                <button class="btn btn-outline-dark" type="submit">ログイン</button>
              </div>
            </td>
          </tr>
          <% end %>

        </table>
    </div>
  </div>
</div>