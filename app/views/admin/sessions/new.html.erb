<div class='container px-5 px-sm-0'>
  <div class="row">
    <div class='col-md-12'>
      <h4 class="ml-5 mt-3", style="background-color: #eee; width:200px; padding-left: 12px; margin-bottom: 40px;"><b>管理者ログイン</b></h4>
      <div class="d-flex align-items-center justify-content-center">

      <table class=padding-left: 12px;>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

         <tr>
            <div class="field">
              <td style="width:160px";><%= f.label :メールアドレス %></td>
              <td style="width:160px";><%= f.text_field :email,  size: 50, autofocus: true, autocomplete: "email", style:"margin-right:10px; margin-bottom: 20px;" %></td>
            </div>
          </tr>
          <tr>
            <div class="field mt-1">
              <td style="width:160px";><%= f.label :パスワード %></td>
              <td><%= f.text_field :password,  size: 50, autocomplete: "current-password", style:"margin-right:10px; margin-bottom: 20px;" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <div class="actions">
                <button class="btn btn-primary" type="submit">ログイン</button>
              </div>
            </td>
          </tr>
          <% end %>

        </table>
    </div>
  </div>
</div>