<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <!--管理者がログインしているとき-->
      <% if admin_signed_in? %>
        <span>LOGO</span>
      <% else %>
        <%= link_to root_path do %>
          <i class="fas fa-birthday-cake"></i>LOGO
        <% end %>
      <% end %>
      <ul class="navbar-nav ml-auto">
        <!--会員がログインしているとき-->
        <% if customer_signed_in? %>
          <li>ようこそ<%= current_customer.family_name %>さん!</li>
          <li><%= link_to "マイページ", my_page_path  %></li>
          <li><%= link_to "商品一覽", items_path %></li>
          <li><%= link_to "カート", cart_items_path %></li>
          <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
        <!--管理者がログインしているとき-->
        <% elsif admin_signed_in? %>
          <li><%= link_to "商品一覽", admin_items_path %></li>
          <li><%= link_to "会員一覽", admin_customers_path %></li>
          <li><%= link_to "注文履歴一覽", admin_path %></li>
          <li><%= link_to "ジャンル一覽", admin_genres_path %></li>
          <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
        <!--ログインしていないとき-->
        <% else %>
          <li><%= link_to "about", about_path %></li>
          <li><%= link_to "商品一覽", items_path %></li>
          <li><%= link_to "新規登録", new_customer_registration_path %></li>
          <li><%= link_to "ログイン", customer_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
