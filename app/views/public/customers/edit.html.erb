<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10'>
      <h4 class="ml-5 mt-3", style="background-color: #eee; width:170px; padding-left: 12px; margin-bottom: 40px;"><b>会員情報編集</b></b></h4>
      <%= form_with model: @customer, url: infomation_path, method: :patch do |f| %>
      <table class=padding-left: 12px;>

        <% if @customer.errors.any? %>
          <%= @customer.errors.count %>件のエラーが発生しました
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>


          <tr>
            <td style="width:160px; ">氏名</td>
            <td><%= f.text_field :family_name,style:"margin-right:10px; margin-bottom: 20px;" %></td>
            <td><%= f.text_field :first_name,style:"margin-right:10px; margin-bottom: 20px;" %></td>
          </tr>
          <tr>
            <td style="width:160px">フリガナ</td>
            <td><%= f.text_field :family_kana,style:"margin-right:10px; margin-bottom: 20px;" %></td>
            <td><%= f.text_field :first_kana,style:"margin-right:10px; margin-bottom: 20px;" %></td>
          </tr>
          <tr>
            <td style="width:160px">郵便番号</td>
            <td><%= f.text_field :postal_code,style:"margin-bottom: 20px;" %></td>
          </tr>
          <tr>
            <td style="width:160px">住所</td>
            <td><%= f.text_field :address,style:"margin-bottom: 20px;" %></td>
          </tr>
          <tr>
            <td style="width:160px">電話番号</td>
            <td><%= f.text_field :telephone_number,style:"margin-bottom: 20px;" %></td>
          </tr>
          <tr>
            <td style="width:160px">メールアドレス</td>
            <td><%= f.text_field :email,style:"margin-bottom: 20px;" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <div class="text-right,style:margin-right: 50px;">
                <button class="btn btn-outline-dark" type="submit">編集内容を保存</button>
              </div>
            </td>
            <td></td>
            <td>
              <span><%= link_to '退会する', unsubscribe_path, class: "btn btn-outline-dark ml-2 mt-3 mb-3 px-5" %></span>
            </td>
          </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>