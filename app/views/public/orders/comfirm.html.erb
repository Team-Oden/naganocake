<h4><strong>注文情報確認</strong></h4>

<% @cart_items.each do |cart_item|%>
<table>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  
      <tr>
      <td><%= image_tag cart_item.item.get_image, size: "60x50" %>
          <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.price.to_s(:delimited) %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.sum_price.to_s(:delimited) %></td>
    </tr>
  
</table>
  
  <table>
    <tr>
      <td>送料</td>
      <td>800</td>
    </tr>
    
    <tr>
      <td>商品合計</td>
      <td><%= @total.to_s(:delimited) %></td>
    </tr>
    
    <tr>
      <td>請求金額</td>
      <td><%= @request_amount.to_s(:delimited) %></td>
    </tr>
  </table>
  
<table>
  <tr>
    <td><h6><strong>支払方法</strong></h6></td>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  
  <tr>
    <td><h6><strong>お届け先</strong></h6></td>
    <td>〒<%= @order.postal_code %><%= @order.address %><br>
        <%= @order.name %>
    </td>
  </tr>
</table>
<%end%>